<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".puzzleView.PuzzleViewActivity"
    android:background="#42043F"
    android:orientation="vertical"

    >


<TextView
    android:id="@+id/tv_puzzleName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="âš¡Puzzle #?"
    android:gravity="center"
    android:textSize="35sp"
    android:textStyle="bold"
    android:textColor="@color/white"

    />
    <TextView
        android:id="@+id/tv_subName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\?\?\?"
        android:gravity="center"
        android:textSize="@dimen/defaultTextSize"
        android:textStyle="bold"
        android:textColor="@color/white"

        />

    <TextView
        android:id="@+id/tv_exploringStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="explored ? / 9"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textSize="@dimen/defaultTextSize"
        android:textStyle="bold"
        android:textColor="@color/white"

        />




<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/quizListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--  Quizz  items-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="0dp"
                >

                <ImageView
                    android:id="@+id/pf1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/qmark"
                    android:layout_margin="0dp"

                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"

                    />
                <ImageView
                    android:id="@+id/pf2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/qmark"

                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />
                <ImageView
                    android:id="@+id/pf3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/qmark"

                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="0dp"
                >

                <ImageView
                    android:id="@+id/pf4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/puzzle_fragment"
                    android:layout_margin="0dp"

                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"

                    />
                <ImageView
                    android:id="@+id/pf5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/puzzle_fragment"

                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />
                <ImageView
                    android:id="@+id/pf6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/puzzle_fragment"

                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="0dp"
                >

                <ImageView
                    android:id="@+id/pf7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/puzzle_fragment"
                    android:layout_margin="0dp"

                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"

                    />
                <ImageView
                    android:id="@+id/pf8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/puzzle_fragment"

                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />
                <ImageView
                    android:id="@+id/pf9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/puzzle_fragment"

                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="0dp"
                >

                <ImageView
                    android:id="@+id/iv_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/puzzle_fragment"
                    android:layout_margin="0dp"

                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"

                    />

                <ImageView
                    android:id="@+id/iv_test2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/puzzle_fragment"
                    android:layout_margin="0dp"

                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"

                    />
                <ImageView
                    android:id="@+id/iv_test3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/qmark"
                    android:layout_margin="0dp"

                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"

                    />




            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="centerCrop"
                android:src="@drawable/ic_wave_0"

                />
        </LinearLayout>
    </LinearLayout>






</ScrollView>

</LinearLayout>


